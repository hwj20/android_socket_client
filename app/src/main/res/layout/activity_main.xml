<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:text="@string/app_name"
        app:layout_constraintStart_toStartOf="@id/text_input_ip"
        app:layout_constraintTop_toTopOf="@id/text_input_ip" />

    <EditText
        android:id="@+id/text_input_ip"
        android:layout_width="200dp"
        android:layout_height="60dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="220dp"
        android:autofillHints="ip"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/text_input_message"
        android:layout_width="200dp"
        android:layout_height="60dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="382dp"
        android:autofillHints=""
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/text_input_id"
        android:layout_width="50dp"
        android:layout_height="40dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="450dp"
        android:autofillHints=""
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/text_show"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>